{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "passThroughEnv": ["PG_DATAQUEUE_DATABASE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build", "^test:e2e"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "cron": {
      "cache": false,
      "persistent": true
    }
  }
}
