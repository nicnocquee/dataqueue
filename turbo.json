{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["PG_DATAQUEUE_DATABASE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^build", "^test:coverage"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build", "^test:e2e"],
      "cache": false
    },
    "test:e2e:coverage": {
      "dependsOn": ["^build", "^test:e2e:coverage"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "cron": {
      "cache": false,
      "persistent": true
    }
  }
}
