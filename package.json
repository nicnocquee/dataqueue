{
  "name": "dataqueue-monorepo",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "pnpm": "^9.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4"
  },
  "scripts": {
    "dev": "turbo run dev cron --parallel --filter demo --filter \"@nicnocquee/dataqueue\"",
    "dev:docs": "turbo run dev --filter docs",
    "dev:demo": "turbo run dev --filter demo",
    "dev:website": "turbo run dev --filter website",
    "dev:dataqueue": "turbo run dev --filter \"@nicnocquee/dataqueue\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e --filter e2e",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "changeset:add": "changeset",
    "changeset:version": "changeset version",
    "release": "turbo run build --filter='@nicnocquee/*' && changeset publish"
  },
  "packageManager": "pnpm@9.0.0"
}
