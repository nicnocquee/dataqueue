{
  "name": "@nicnocquee/dataqueue",
  "version": "1.16.0",
  "description": "PostgreSQL-based job queue for Node.js applications with support for serverless environments",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "migrations/"
  ],
  "scripts": {
    "build": "tsup",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint && npm run test",
    "lint": "tsc",
    "test": "vitest run",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "local-release": "changeset version && changeset publish",
    "dev": "tsup --watch",
    "migrate": "node-pg-migrate -d $PG_DATAQUEUE_DATABASE -m ./migrations",
    "changeset:add": "changeset",
    "changeset:version": "changeset version && find .changeset -type f -name '*.md' ! -name 'README.md' -delete"
  },
  "keywords": [
    "nextjs",
    "postgresql",
    "job-queue",
    "background-jobs",
    "vercel"
  ],
  "author": "Nico Prananta",
  "license": "MIT",
  "dependencies": {
    "pg": "^8.0.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.4",
    "@types/pg": "^8.15.4",
    "@vitejs/plugin-react": "^4.6.0",
    "jsdom": "^26.1.0",
    "node-pg-migrate": "^8.0.3",
    "pnpm": "^9.0.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "turbo": "^1.13.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.0.0"
  },
  "bin": {
    "dataqueue-cli": "./cli.cjs"
  }
}
